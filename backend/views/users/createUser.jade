html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title createUser
    body 
        form
            p id : 
                input(type="text" name="id")
            p password : 
                input(type="password" name="password")
            p name : 
                input(type="text" name="name")
        button(class='ajaxsend') submit
        hr
        a(href='/')
            button home
        div(class='result')
        script(type='text/javascript').
            document.querySelector('.ajaxsend').addEventListener('click', () => {
                const id = document.forms[0].elements[0].value;
                const password = document.forms[0].elements[1].value;
                const name = document.forms[0].elements[2].value;
                const inputData = {
                    id: id,
                    password: password,
                    name: name
                };
                const url = "http://localhost:3000/users/createUser";
                ajax_send(url, inputData);

                function ajax_send(url, inputData) {
                    var data = JSON.stringify(inputData);
                    console.log(data);
                    var xhr = new XMLHttpRequest();
                    xhr.open('POST', url);
                    xhr.setRequestHeader('content-type', 'application/json');
                    xhr.send(data);
                    xhr.addEventListener('load', () => {
                        const result = JSON.parse(xhr.responseText);
                        if (result.result === 'fail') {
                            document.querySelector('.result').innerHTML = "동일한 사용자가 이미 존재합니다.";
                        } else {
                            document.querySelector('.result').innerHRML = '회원가입 성공';
                        }
                    });
                }
            });